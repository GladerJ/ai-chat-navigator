{
  "manifest_version": 3,
  "name": "AI Chat Navigator",
  "version": "0.1.0",
  "description": "Add a sidebar navigator to long AI chat conversations.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "AI Chat Navigator"
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": [
    "https://claude.ai/*",
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://chat.deepseek.com/*",
    "https://www.doubao.com/*",
    "https://doubao.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://claude.ai/*",
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://chat.deepseek.com/*",
        "https://www.doubao.com/*",
        "https://doubao.com/*"
      ],
      "js": [
        "src/utils/i18n.js",
        "src/utils/platforms.js",
        "src/content/platforms/chatgpt.js",
        "src/content/platforms/claude.js",
        "src/content/platforms/gemini.js",
        "src/content/platforms/deepseek.js",
        "src/content/platforms/doubao.js",
        "src/utils/storage.js",
        "src/content/scanner.js",
        "src/content/navigator.js",
        "src/content/content.js"
      ],
      "css": ["src/content/styles.css"],
      "run_at": "document_idle"
    }
  ]
}
